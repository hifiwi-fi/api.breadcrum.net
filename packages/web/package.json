{
  "name": "@breadcrum/web",
  "description": "The primary web server process in breadcrum.net. Provides API and html web serving.",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@breadcrum/bookmarklet": "^1.0.9",
    "@breadcrum/resources": "file:../resources",
    "@bull-board/api": "^5.17.1",
    "@bull-board/fastify": "^5.17.1",
    "@fastify/accepts": "^4.0.0",
    "@fastify/auth": "^4.0.0",
    "@fastify/autoload": "^5.8.2",
    "@fastify/basic-auth": "^5.0.0",
    "@fastify/circuit-breaker": "^3.0.0",
    "@fastify/compress": "^7.0.0",
    "@fastify/cookie": "^9.0.1",
    "@fastify/cors": "^9.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/postgres": "^5.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/redis": "^6.0.1",
    "@fastify/sensible": "^5.0.0",
    "@fastify/static": "^7.0.0",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^3.0.0",
    "@nearform/sql": "^1.5.0",
    "abstract-cache-redis": "^2.0.0",
    "bullmq": "^5.1.12",
    "classnames": "^2.3.1",
    "clean-deep": "^3.4.0",
    "common-tags": "^1.8.2",
    "dotenv": "^16.0.1",
    "fast-json-body": "^1.1.0",
    "fastify": "^4.0.1",
    "fastify-cli": "^6.0.0",
    "fastify-healthcheck": "^4.0.0",
    "fastify-metrics": "^11.0.0",
    "fastify-plugin": "^4.0.0",
    "fastify-user-agent": "^1.0.1",
    "fetch-undici": "^4.0.0",
    "format-duration": "^3.0.0",
    "fragmentions": "^1.1.4",
    "giscus": "^1.5.0",
    "highlight.js": "^11.5.0",
    "hyperid": "^3.1.1",
    "jsonfeed-to-atom": "^1.2.5",
    "jsonfeed-to-rss": "^3.0.8",
    "local-storage-proxy": "^4.0.3",
    "mine.css": "^9.0.2",
    "nodemailer": "^6.8.0",
    "p-map": "^7.0.0",
    "p-queue": "^8.0.0",
    "pg": "^8.6.0",
    "postgrator-cli": "^8.0.0",
    "resolve-email": "2.0.16",
    "uland-isomorphic": "^2.0.0",
    "undici": "^6.0.1",
    "webassert": "^3.0.2",
    "xmlbuilder": "^15.1.1"
  },
  "optionalDependencies": {
    "sodium-native": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.2",
    "@voxpelli/tsconfig": "^12.0.0",
    "npm-run-all2": "^6.0.0",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0",
    "tap": "^18.1.0",
    "top-bun": "^7.0.0",
    "typescript": "~5.5.0-beta"
  },
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:top-bun": "tb --src client --dest public",
    "clean": "rm -rf public && mkdir -p public",
    "migrate": "postgrator",
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:standard": "standard --verbose | snazzy",
    "test:tap": "tap",
    "watch": "run-s clean && run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git ./client ./public' -l info -P -p 3000 --options --address localhost app.js",
    "watch:tob-bun": "npm run build:top-bun -- --watch-only",
    "top-bun-watch": "npm run build:top-bun -- --watch",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js",
    "generate-dbml": "npx pg-to-dbml --c postgres://postgres@localhost/breadcrum"
  },
  "standard": {
    "ignore": [
      "public"
    ]
  },
  "tap": {
    "serial": [
      "test",
      "routes"
    ],
    "typecheck": false,
    "allow-incomplete-coverage": true,
    "coverage-report": [
      "text",
      "lcovonly"
    ]
  }
}
