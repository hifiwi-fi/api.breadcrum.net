{
  "name": "@breadcrum/worker",
  "description": "The queue worker process in breadcrum.net",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "generate-default-env": "node scripts/generate-default-env.js",
    "prod-sim": "fastify start -l info app.js --address 0.0.0.0",
    "start": "run-s watch",
    "test": "run-s test:*",
    "test:eslint": "eslint .",
    "test:tap": "tap",
    "watch": "run-p watch:*",
    "watch:server": "fastify start -w --ignore-watch='node_modules .git web public' -l info -P -p 3001 --options --address localhost app.js",
    "print-routes": "fastify print-routes app.js",
    "print-plugins": "fastify print-plugins app.js"
  },
  "dependencies": {
    "@breadcrum/extract-meta": "^1.0.5",
    "@breadcrum/resources": "file:../resources",
    "@fastify/autoload": "^5.8.2",
    "@fastify/env": "^4.0.0",
    "@fastify/postgres": "^5.0.0",
    "@fastify/redis": "^6.0.1",
    "@fastify/sensible": "^5.0.0",
    "@mozilla/readability": "^0.5.0",
    "@nearform/sql": "^1.10.5",
    "abstract-cache-redis": "^2.0.0",
    "bullmq": "^5.1.12",
    "concat-stream": "^2.0.0",
    "dompurify": "^3.1.2",
    "fastify": "^4.0.1",
    "fastify-cli": "^6.0.0",
    "fastify-healthcheck": "^4.0.0",
    "fastify-metrics": "^11.0.0",
    "fastify-plugin": "^4.0.0",
    "gunzip-maybe": "^1.4.2",
    "hyperid": "^3.1.1",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.0.0",
    "undici": "^6.16.0",
    "webassert": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.5.2",
    "@voxpelli/tsconfig": "^12.0.0",
    "npm-run-all2": "^6.0.0",
    "neostandard": "^0.11.0",
    "tap": "^21.0.0",
    "typescript": "~5.5.0-beta"
  },
  "tap": {
    "serial": [
      "test",
      "routes",
      "plugins"
    ],
    "typecheck": false,
    "allow-incomplete-coverage": true,
    "coverage-report": [
      "text",
      "lcovonly"
    ]
  }
}
