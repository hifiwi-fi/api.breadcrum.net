{
  "name": "api.breadcrum.net",
  "description": "The api for breadcrum.net",
  "version": "0.0.0",
  "author": "Bret Comnes <bcomnes@gmail.com> (https://bret.io)",
  "bugs": {
    "url": "https://github.com/hifiwi-fi/api.breadcrum.net/issues"
  },
  "dependencies": {
    "@nearform/sql": "^1.5.0",
    "desm": "^1.2.0",
    "fastify": "^3.0.0",
    "fastify-auth": "^1.1.0",
    "fastify-autoload": "^3.0.2",
    "fastify-caching": "^6.2.0",
    "fastify-circuit-breaker": "^1.1.0",
    "fastify-cli": "^2.5.1",
    "fastify-compress": "^4.0.1",
    "fastify-cors": "^6.0.3",
    "fastify-env": "^2.1.1",
    "fastify-healthcheck": "^3.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-postgres": "^3.5.0",
    "fastify-rate-limit": "^5.7.2",
    "fastify-request-context": "^2.2.0",
    "fastify-secure-session": "^3.0.0",
    "fastify-sensible": "^3.1.0",
    "fluent-json-schema": "^3.0.1",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.0.0",
    "c8": "^7.10.0",
    "dependency-cruiser": "^11.0.0",
    "gh-release": "^6.0.0",
    "npm-run-all2": "^5.0.0",
    "postgrator": "^7.0.0",
    "postgrator-cli": "^5.0.0",
    "snazzy": "^9.0.0",
    "sodium-native": "^3.2.1",
    "standard": "^16.0.3",
    "tap": "^15.0.9"
  },
  "engines": {
    "node": "^17.5.0",
    "npm": "^8.4.1"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bcomnes"
  },
  "homepage": "https://github.com/hifiwi-fi/api.breadcrum.net",
  "keywords": [],
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/hifiwi-fi/api.breadcrum.net.git"
  },
  "scripts": {
    "deps": "depcruise --exclude '^node_modules|^[a-zA-Z0-9\\_]+$' --output-type dot . | dot -T svg > dependencygraph.svg",
    "migrate": "postgrator",
    "prepublishOnly": "git push --follow-tags && gh-releas -y",
    "prod-sim": "fastify start -l info app.js",
    "release": "git push --follow-tags && gh-release -y",
    "start": "fastify start -w -l info -P app.js",
    "test": "run-s test:*",
    "test:deptree": "depcruise --validate .dependency-cruiser.json app.js",
    "test:standard": "standard --verbose | snazzy",
    "test:tap": "c8 tap --no-coverage",
    "version": "run-s version:*",
    "version:changelog": "auto-changelog -p --template keepachangelog auto-changelog --breaking-pattern 'BREAKING CHANGE:'",
    "version:git": "git add CHANGELOG.md"
  },
  "standard": {
    "ignore": []
  },
  "type": "module"
}
